{
  "buildCommand": "npm run build",
  "installCommand": "npm install && npx prisma generate",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "@database_url",
    "NEXTAUTH_URL": "@nextauth_url", 
    "NEXTAUTH_SECRET": "@nextauth_secret",
    "ENCRYPTION_KEY": "@encryption_key"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url"
    }
  }
}